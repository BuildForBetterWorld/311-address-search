{
	"manifest_version": 2,
	"name": "311 for Addresses",
	"version": "1.0",
	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": [
				// nakedapartments doesn't have addresses. renthop has addresses in no clear identifiable way
				"http://*.streeteasy.com/building/*",
				"http://*.streeteasy.com/rental/*",
				"http://www.trulia.com/*",
				"https://www.zumper.com/*",
				"http://www.zillow.com/homes/for_rent/*",
				"http://newyork.craigslist.org/*",
				"https://www.padmapper.com/*"
			],
			"js": [
				"jquery-1.12.1.min.js",
				"content.js"
			]
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_title": "311",
		"default_icon": "icon16.png"
		//"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"activeTab",
		"tabs"
	]
}